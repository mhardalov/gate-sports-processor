Phase: Location
Input: Lookup Token
Options: control = appelt

Rule: EntityAnnotation
(
  (
    {Token.kind == word, Token.category =~ "Np", Token.orth != lowercase} |
    {Token.kind == word, Token.category == "Hmsi", Token.orth != lowercase} |
    {Token.kind == word, Token.category == "Hfsi", Token.orth != lowercase} 
  )
):match
-->
:match.Entity = {rule = "EntityAnnotation"}
